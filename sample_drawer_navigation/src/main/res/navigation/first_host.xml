<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/first_host"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.ag.sample_drawer_navigation.fragments.FirstFragment"
        android:label="FirstFragment">

        <action
            android:id="@+id/action_firstFragment_to_iterationFragment"
            app:destination="@id/iterationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/iterationFragment"
        android:name="com.ag.sample_drawer_navigation.fragments.IterationFragment"
        android:label="IterationFragment" />


</navigation>